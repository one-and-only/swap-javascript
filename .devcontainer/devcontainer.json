{
    // Custom dockerfile that installs all dependencies
    "dockerFile": "swap-javascript.dockerfile",
    // Update git submodules
    "postCreateCommand": "./bin/update_submodules.sh",
    // Some descriptive name
    "name": "Swap JavaScript",
    // My fav extensions that I want in all dev environments
    "extensions": [
        "Gruntfuggly.todo-tree",
        "monokai.theme-monokai-pro-vscode",
        "mgmcdermott.vscode-language-babel",
        "formulahendry.auto-rename-tag",
        "ms-vscode.cpptools-extension-pack",
        "yzhang.markdown-all-in-one",
        "eamodio.gitlens",
        "pflannery.vscode-versionlens"
    ],
    // Settings that I want to persist
    "settings": {
        "workbench.colorTheme": "Monokai Pro (Filter Machine)",
        "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
        "versionlens.caching.duration": 1,
        "versionlens.composer.caching.duration": 1,
        "versionlens.suggestions.showOnStartup": true,
        "editor.fontSize": 20,
        "git.autofetch": true,
        "git.enableCommitSigning": true
    }
}