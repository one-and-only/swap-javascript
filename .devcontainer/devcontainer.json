{
    // Custom dockerfile that installs all dependencies
    "dockerFile": "swap-javascript.dockerfile",
    // Update git submodules and setup Emscripten SDK
    "postCreateCommand": "./bin/update_submodules.sh && git clone https://github.com/emscripten-core/emsdk.git && cd emsdk && ./emsdk install 3.1.13 && ./emsdk activate 3.1.13 && echo 'source \"/workspaces/swap-javascript/emsdk/emsdk_env.sh\"' >> /root/.bashrc && echo 'export EMSCRIPTEN=/workspaces/swap-javascript/emsdk/upstream/emscripten' >> /root/.bashrc",
    // Some descriptive name
    "name": "Swap JavaScript",
    // My fav extensions that I want in all dev environments
    "extensions": [
		"Gruntfuggly.todo-tree",
		"monokai.theme-monokai-pro-vscode",
		"mgmcdermott.vscode-language-babel",
		"formulahendry.auto-rename-tag",
		"yzhang.markdown-all-in-one",
		"eamodio.gitlens",
		"pflannery.vscode-versionlens",
		"jeff-hykin.better-cpp-syntax",
		"ms-vscode.cpptools-extension-pack"
	],
    // Settings that I want to persist
    "settings": {
        "workbench.colorTheme": "Monokai Pro (Filter Machine)",
        "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
        "versionlens.caching.duration": 1,
        "versionlens.composer.caching.duration": 1,
        "versionlens.suggestions.showOnStartup": true,
        "editor.fontSize": 20,
        "git.autofetch": true,
        "git.enableCommitSigning": true
    }
}